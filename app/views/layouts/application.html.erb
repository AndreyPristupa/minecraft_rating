                <li class="header">Join To Us</li>
                <% if settings[:TWITTER_LINK] %>
                    <li><a class="twitter" href="<%= settings[:TWITTER_LINK] %>" target="_blank"><i class="fa fa-twitter fa-lg "></i></a></li>
